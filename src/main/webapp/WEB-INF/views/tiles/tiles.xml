<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
  "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- tiles 적용 -->
	<definition name="template" template="/WEB-INF/views/tiles/template.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
		<put-attribute name="left" value="/WEB-INF/views/tiles/left.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
	</definition>
 
	<definition name="*" extends="template">
		<put-attribute name="body" value="/WEB-INF/views/pages/{1}.jsp" />
	</definition>
	
	
	<definition name="*/*/*" extends="template">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>
	
	<definition name="*/*/*/*" extends="template">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}/{4}.jsp" />
	</definition>
	
	
</tiles-definitions>